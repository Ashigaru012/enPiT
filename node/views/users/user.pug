extends ../layout/header-footer

block append head
    title users
    
block append link
    style(type="text/css").
        #mypage
        {
            text-align: center;
            height:100%;
            width:100%;
            padding-top: 40px;
            background-image: url("/images/background-image.jpg");
            background-size:270% 110%;
            background-color: rgba(255, 255, 255, 0.5);
            background-blend-mode: lighten;
        }

        .fas{
            font-size:100px;
            color:FFFFFF;
        }

        div#mypage h2
        {
            position: relative;
            font-weight: bold;
            width: 100%;
            vertical-align: text-bottom;
            font-family: Font Awesome 5 Free;
            font-style: normal;
            font-weight: 900;
            font-size: 64px;
            text-align: center;
            color: #000000;
            margin: 0;
        }

        div#mypagetitle
        {
            text-align: center;
            height:10%;
        }
        #mypagetitle h2
        {
            margin-top: 0;
        }
        #icon
        {
            text-align: center;
            height:20%;
        }

        #icon-view
        {
            width: 200px;
            height: 200px;
            margin: auto;
            border-radius: 50%;
            background-position: center;
            background-size: 120%;
            border: solid 12px black;
        }

        div#iine
        {
            text-align: center;
            width: 100%;
        }
        
        #iine-line
        {
            text-shadow: 4px  4px 0px #ffffff,-4px  4px 0px #ffffff,4px -4px 0px #ffffff,-4px -4px 0px #ffffff,4px  0px 0px #ffffff,0px  4px 0px #ffffff,-4px  0px 0px #ffffff,0px -4px 0px #ffffff;
            width: intrinsic;           /* Safari/WebKit uses a non-standard name */
            width: -moz-max-content;    /* Firefox/Gecko */
            width: -webkit-max-content; /* Chrome */
            display: flex;
            margin: 70px auto 70px auto;
        }

        .iineCount
        {
            padding: 0;
            margin: 0;
            color: #EE7836;
            font-weight: 900;
            font-size: 120px;
            margin-right: 60px;
        }
        #good
        {
            color: #EE7836;
            font-size: 120px;
            line-height: 90px;
        }
        div#profile
        {
            text-align: center;
            height:40%;
            margin: auto;
            width: 80%;
        }

        .prof
        {
            border-bottom: solid 2px black;
            display: flex;
            margin-top: 30px;
        }

        .prof-title
        {
            display: block;
            flex-basis: 25%;
            margin: auto;
            padding: 0;
            font-weight: 900;
            font-size: 24px;
        }

        .profnakami
        {
            flex-basis: 75%;
            margin: 0 auto;
            font-weight: 900;
            font-size: 54px;
        }

block content
    #mypage
        #mypagetitle
            h2 プロフィール
        // アイコン
        #icon
            #icon-view
        // いいね数
        #iine
            h2 総いいね数
            #iine-line
                p.iineCount #{user.good}
                i#good.fas.fa-thumbs-up
        // プロフィール
        #profile
            .prof
                p.prof-title ニックネーム:
                p.profnakami #{user.name}
            .prof
                p.prof-title アンテナの距離:
                p.profnakami 3km
            .prof
                p.prof-title ひとこと:
                p.profnakami よろしくおねがいします。

block js
    script.
        const icon_img = document.querySelector("#icon-view");

        const buf = new Image();
        buf.src = `#{icon_img}`;
        icon_img.style.backgroundImage = `url("${buf.src}")`;