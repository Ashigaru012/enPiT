        {
            display: block;
            font-size: 24px;
        }


block content
    .main
        .title
            h2
                i.fas.fa-bullhorn
                | タスケを呼ぶ
        .task_detail_form
            .items
                label タイトル：
                input#title-input.ellipse.forms(type='text' name='title' size='40' maxlength='14')
            .items
                label 募集人数：
                select#applicants-input.ellipse.selects(name='recruiting_count')
                    option(value='1') 1人
                    option(value='2') 2人
                    option(value='3') 3人
                    option(value='4') 4人
            .items
                label 予想所要時間：
                select.ellipse.selects(name='duration')
                    option(value='5') 5分
                    option(value='10') 10分
                    option(value='30') 30分
                    option(value='45') 45分
                    option(value='60') 60分
        .items
            button#send-btn
                p.large 送信
                    span ※範囲内のアンテナに一斉送信されます

    
block js
    script(src="https://unpkg.com/axios/dist/axios.min.js")
    script.
        const user_id = #{user_id};

        const title_input = document.querySelector("#title-input");
        const applicants_input = document.querySelector("#applicants-input");
        
        const send_btn = document.querySelector("#send-btn");

        send_btn.addEventListener("click", () =>
        {
            const request = 
            {
                user_id: user_id,
                title: title_input.value,
                max_applicants: applicants_input.value,
                is_waiting: true,
                is_finished: false
            };

            axios.post(`http://${location.host}/requests/`, request).then(res => 
            {
                window.location.href = res.data.url;
            });
        });