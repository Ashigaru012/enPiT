extends ../../layout/header-footer

block append head
    meta(charset='utf-8')
    title weekly ranking
    
block append link
    style(type="text/css").
        .ranking-icon
        {
            color: #44403E;
        }
        .main
        { 
            width:100%;
            height:90%;
            // background-size:270% 110%;
            padding: 0;
            margin: 0;
        }
        .tab{
            width: 100%;
            height: 130px;
            margin-top: 12px;
            display: flex;
        }

        .weekly-tab
        {
            flex-grow: 1;
            font-size: 77px;
            font-weight: 900;

            border: 7px solid #EE7836;
            border-radius: 40px; 

            text-align: center;
            line-height: 130px;

            background-color: white;
        }
        
        .weekly-tab a
        {
            color:#EE7836;
            text-decoration: none;
            width: 100%;
            display: block;
        }

        .current-tab
        {
            background-color: #EE7836;
            color: white;
        }

        .title
        {
            position: relative;
            text-align: center;
            margin-top: 0px;
            height: 200px;
        }

        .title p
        {
            font-size: 70px;
            font-weight: 900;
            margin-top: 5px;
            color:white;
            -webkit-text-stroke-width: 3.5px;
            -webkit-text-stroke-color: #EE7836;
            -webkit-text-fill-color: white;
            position: relative;
            top: 10px;
            left: 20px;
        }

        .title span{
            font-size: 100px;
        }

        .title svg{
            position: absolute;
            width: 100%;
            left: 0px;
            top: -110px;
            z-index: 0;
        }

        .RankTable{
            width: 100%;
            z-index: 100;
        }

        .container{
            height: 170px;
            width: 800px;
            
            margin:30 auto;
            border: 7px solid #EE7836;
            border-radius: 70px;
            overflow: hidden;

            display: flex;
            justify-content: middle;
            align-items: middle;
            position: relative;
            z-index: 100;
        }

        .number{
            float: left;
            font-size: 100px;
            margin-left:40px;
            position: relative;
            bottom: 80px;
        }

        .image{

            float: left;
            margin:auto 10;
        }

        .username{
            float: left;
            font-size: 60px;
            margin:auto 10;
            font-weight: 900;
        }

        .good{
            font-size: 30px;
            font-weight: 900;
            margin-left:20px;
            position: absolute;
            top:100px;
            left:650px;
            float: right;
        }

        .good-num{
            width: 264px;
            height: 170px;
            font-size: 30px;
            font-weight: 900;
            
            text-align: right;
            float:right;
            position: relative;
            top:100px;
            left:50px;
        }

        .rank_1 .container{
            background-color: #FDE8A0;
        }



        .rank_2 .container{
            background-color: #DEDEDE;
        }

        .rank_3 .container{
            background-color: #F0B8AB;
        }

        .rank_4 .container{
            height: 120px;
            width: 700px;
            border-radius: 70px;
            background-color: white;
        }

        .rank_4 .container .number{
            font-size: 80px;
            position: relative;
            bottom: 80px;
        }

        .rank_4 .container .username{
            font-size: 50px;   
        }

        .rank_4 .container .good{
            position: relative;
            top:60px;
            left: 50px;
        }

        .rank_4 .container .good-num{
            position: relative;
            top:60px;
            left: 60px;
            
        }

        .rank_5 .container{
            height: 120px;
            width: 700px;
            background-color: white;
        }

        .rank_5 .container .number{
            font-size: 80px;
            position: relative;
            bottom: 80px;
        }


        .rank_5 .container .username{
            font-size: 50px;   
        }

        .rank_5 .container .good{
            position: relative;
            top:60px;
            left: 50px;
        }

        .rank_5 .container .good-num{
            position: relative;
            top:60px;
            left: 60px;
            
        }

        .rank_image{
            position: fixed;
            width: 20%;
            right: 250px;
            bottom: 230px;
        }


