extends ../layout/header-footer

block append head
    title rooms
    
block append link
    style(type="text/css").
        .room-item-wrapper > a, a:visited, a:active
        {
            color: inherit;
            text-decoration: none;
        }

        .chat-icon
        {
            color: #44403E;
        }
        
        .main
        {
            position: relative;
            width:100%;
            height:100%;
            background-image: url("../../images/background-image.jpg");
            background-size:270% 110%;
            background-color: rgba(255, 255, 255, 0.5);
            background-blend-mode: lighten;
            display: flex;
            flex-flow: column;
        }
        #rooms-container
        {
            width:100%;
            height:100%;
            padding-top: 10px;
            overflow:auto;
        }

        .room-item-wrapper
        {
            width: 100%;
        }

        .room-item
        {
            width: 90%;
            padding: 15px;
            margin: 50px auto;
            background: white;
            border: 6.5px #EE7836 solid;
            border-radius: 60px; 
            color:black;
        }
        
        .room-item p
        {
            margin: 0;
            margin-left: 30px;
            font-size: 50px;
        }

        .date
        {
            text-align: left;
        }

        .title
        {
            text-align: center;
        }


block content
    .main
        #rooms-container
            .room-item-wrapper
                each item in rooms
                    a(href=item.href)
                        .room-item
                            .date
                                p 2021/01/18
                            .title
                                p #{item.title}