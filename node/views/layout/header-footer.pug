html
  head
    block head
        meta(charset="utf-8")
        
    link(href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet")
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Archivo+Black&display=swap" rel="stylesheet")

    style(type="text/css").
        
        /*
        body{
            width:100%;
            height:100vh;
            background-color:red;
        }
        */
        
        header{
            height:10%;
            width:100%;
            background-color:EE7836;
        }

        #content-container{
            height:80%;
            background-color:white;
        }

        nav{
            display:flex;
            height:10%;
            width:100%;
            background-color:EE7836;
        }

        nav li{
            text-align: center;
            width: 25%;
            margin-top: auto;
            margin-bottom: auto;
            color: #FFFFFF
        }

        .fas{
            font-size:100px;
            color:FFFFFF;
        }

        #header-wrapper
        {
            position: relative;
        }

        #notify-btn
        {
            width: 160px;
            height: 100%;
        }

        button
        {
            background: rgba(45,45,45, 0);
            border: 0px none;
            width: 100%;
            height: 100%;
        }

        #title-wrapper
        {
            position: absolute;
            top: 0px;
            left: 0px;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center; 
        }
        #title {
            font-family: Archivo Black;
            font-style: normal;
            font-weight: normal;
            font-size: 100px;

            color: #FFFFFF;
        }
        
    block link

    body
        header
            #header-wrapper
                #notify-btn
                    button
                        i.fas.fa-bell
                #title-wrapper
                    h1(id="title") Taskul

        #content-container
            block content

        nav
            li
                a(href="")
                    i.fas.fa-map-marked-alt
                    br
                    span マップ
            li
                a(href="")
                    i.fas.fa-comments
                    br
                    span チャット
            li
                a(href="")
                    i.fas.fa-crown
                    br
                    span ランキング
            li
                a(href="")
                    i.fas.fa-user-alt
                    br
                    span マイページ

