html
  head
    link(rel="icon" href="images/favicon.ico")
    block head
        meta(charset="utf-8")
        
    link(href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet")
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Archivo+Black&display=swap" rel="stylesheet")

    style(type="text/css").
        @import url('https://fonts.googleapis.com/css2?family=Kosugi&display=swap');

        html
        {
            font-family: 'Kosugi', sans-serif;
        }
        /*
        body{
            width:100%;
            height:100vh;
            background-color:red;
        }
        */
        
        header{
            height:10%;
            width:100%;
            background-color:EE7836;
        }

        #content-container{
            height:80%;
            background-color:white;
        }

        .footer-nav nav{
            display:flex;
            height:10%;
            width:100%;
            background-color:EE7836;
        }

        .footer-nav nav li{
            text-align: center;
            width: 25%;
            margin-top: auto;
            margin-bottom: auto;
            color: #FFFFFF;
            list-style: none;
        }

        a.footer-link, a:visited.footer-link, a:hover.footer-link, a:active.footer-link 
        {
            color: inherit;
            text-decoration: none;
            font-weight: 900;
            font-size: 22px;
        }

        .fas{
            font-size:100px;
            color:FFFFFF;
        }

        #header-wrapper
        {
            position: relative;
        }

        #notify-btn-wrapper
        {
            position: relative;
            width: 160px;
            height: 100%;
        }


        #notify-btn-wrapper button
        {
            background: rgba(45,45,45, 0);
            border: 0px none;
            width: 100%;
            height: 100%;
        }
        
        #notification-circle
        {
            position: absolute;
            top: 32px;
            right: 32px;
            border-radius: 50%;
            background-color: red;
            width: 38px;
            height: 38px;
            visibility: hidden;   
        }

        #title-wrapper
        {
            position: absolute;
            top: 0px;
            left: 0px;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center; 
            pointer-events: none; /* 追加 */
        }
        #title {
            font-family: Archivo Black;
            font-style: normal;
            font-weight: normal;
            font-size: 100px;

            color: #FFFFFF;
        }
        
    block link

    body
        header
            #header-wrapper
                #notify-btn-wrapper
                    button#notify-btn
                        i.fas.fa-bell
                    #notification-circle
                #title-wrapper
                    h1(id="title") Taskul

        #content-container
            block content

        .footer-nav
            nav
                li
                    a(href=common.map_link)#map-link.footer-link
                        i.fas.fa-map-marked-alt.map-icon
                        br
                        span.map-icon マップ
                li
                    a(href=common.chat_link)#chat-link.footer-link
                        i.fas.fa-comments.chat-icon
                        br
                        span.chat-icon チャット
                li
                    a(href=common.ranking_link)#ranking-link.footer-link
                        i.fas.fa-crown.ranking-icon
                        br
                        span.ranking-icon ランキング
                li
                    a(href=common.mypage_link)#mypage-link.footer-link
                        i.fas.fa-user-alt.mypage-icon
                        br
                        span.mypage-icon マイページ
        
        block js